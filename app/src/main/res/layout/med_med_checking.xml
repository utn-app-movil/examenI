<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/med_lblTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/med_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/med_txtId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_id"
                android:inputType="text"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/med_btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/med_label_search"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/med_txtPatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_patient_name"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/med_txtBloodPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_blood_pressure"
                android:inputType="text"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/med_txtWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_weight"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/med_txtHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_height"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/med_txtOxygenation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_oxygenation"
                android:inputType="number"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/med_txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_date"
                android:inputType="date"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/med_txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med_label_time"
                android:inputType="time"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

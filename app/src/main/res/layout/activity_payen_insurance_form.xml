<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/payen_txt_title_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payen_title_form"
            android:textSize="20sp"
            android:paddingBottom="12dp" />

        <!-- PERSON INFORMATION -->

        <TextView
            android:text="@string/payen_person_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/payen_txt_person_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="123456789"
            android:inputType="text" />

        <TextView
            android:text="@string/payen_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="John Doe"
            android:inputType="textPersonName" />

        <TextView
            android:text="@string/payen_person_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_person_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@mail.com"
            android:inputType="textEmailAddress" />

        <!-- SPECIALTY -->
        <TextView
            android:text="@string/payen_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <Spinner
            android:id="@+id/payen_spn_specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- APPOINTMENT DATE -->
        <TextView
            android:text="@string/payen_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_appointment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/MM/yyyy"
            android:focusable="false" />

        <!-- APPOINTMENT TIME -->
        <TextView
            android:text="@string/payen_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_appointment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH:mm"
            android:focusable="false" />

        <!-- REQUEST DATE -->
        <TextView
            android:text="@string/payen_request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_request_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/MM/yyyy"
            android:focusable="false" />

        <!-- REQUEST TIME -->
        <TextView
            android:text="@string/payen_request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_request_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH:mm"
            android:focusable="false" />

        <!-- AMOUNTS -->

        <TextView
            android:text="@string/payen_appointment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_appointment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="35000"
            android:inputType="numberDecimal" />

        <TextView
            android:text="@string/payen_medicines_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/payen_txt_medicines_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="12000"
            android:inputType="numberDecimal" />

        <!-- SELECT MEDICINES -->
        <Button
            android:id="@+id/payen_btn_select_medicines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/payen_btn_select_medicines" />

        <!-- REFUND RESULT -->
        <TextView
            android:id="@+id/payen_txt_refund_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payen_refund_label"
            android:textSize="16sp"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/payen_txt_refund_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¡0.00"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <!-- SAVE BUTTON -->
        <Button
            android:id="@+id/payen_btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payen_btn_update"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- DELETE BUTTON -->
        <Button
            android:id="@+id/payen_btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payen_msg_deleted"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mark_toolbar_form"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="Campaña de Marketing"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Código (solo lectura) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mark_et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/mark_hint_code" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nombre de campaña -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mark_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mark_hint_name"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mark_et_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mark_hint_budget"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha inicio -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mark_et_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/mark_hint_start_date" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha fin -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mark_et_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/mark_hint_end_date" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/mark_label_channel"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/mark_spinner_channel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/mark_channels" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/mark_label_province"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/mark_spinner_province"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/mark_provinces" />

        <!-- Líder -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mark_et_leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mark_hint_leader"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/mark_btn_cancel"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:text="CANCELAR"
                android:textColor="#666666"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:backgroundTint="#DDDDDD"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/mark_btn_save"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="GUARDAR"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:backgroundTint="#2196F3" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>